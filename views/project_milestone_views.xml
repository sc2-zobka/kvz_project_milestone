<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Tree View -->
    <record id="view_project_milestone_manager_tree" model="ir.ui.view">
        <field name="name">project.milestone.manager.tree.inherit</field>
        <field name="model">project.milestone</field>
        <field name="inherit_id" ref="project.project_milestone_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_reached']" position="after">
                <field name="project_manager_id" optional="show" />
            </xpath>
        </field>
    </record>

    <!-- Inherit Form View -->
    <record id="view_project_milestone_manager_form" model="ir.ui.view">
        <field name="name">project.milestone.manager.form.inherit</field>
        <field name="model">project.milestone</field>
        <field name="inherit_id" ref="project.project_milestone_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_details']" position="inside">
                <field name="project_manager_id" readonly="1" />
            </xpath>
        </field>
    </record>

    <!-- Actions Own Milestones -->
    <record id="action_project_own_milestones" model="ir.actions.act_window">
        <field name="name">My Milestones</field>
        <field name="res_model">project.milestone</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('project_manager_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No milestones found
            </p>
            <p>
                You'll see milestones from projects where you are the project manager.
            </p>
        </field>
    </record>

    <!-- Actions All Milestones -->
    <record id="action_project_milestone_all" model="ir.actions.act_window">
        <field name="name">All Milestones</field>
        <field name="res_model">project.milestone</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No milestones found
            </p>
            <p>
                You'll see milestones from all projects you can access.
            </p>
        </field>
    </record>


    <menuitem id="menu_project_milestone_manager"
        name="Milestones"
        parent="project.menu_main_pm"
        sequence="20"
        groups="project.group_project_manager" />

    <menuitem id="menu_project_own_milestones"
        name="My Milestones"
        parent="menu_project_milestone_manager"
        action="action_project_own_milestones"
        sequence="10"
    />

    <menuitem id="menu_project_milestone_all"
        name="All Milestones"
        parent="menu_project_milestone_manager"
        action="action_project_milestone_all"
        sequence="20"
    />

</odoo>