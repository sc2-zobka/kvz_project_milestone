<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Form View - Backlog -->
    <record id="form_view_inherit_backlog" model="ir.ui.view">
        <field name="name">form.view.inherit.backlog</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="kvz_backlog.form_sale_order_line_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='replanning_count']" position="after">
                <field name="milestone_id" optional="hide"/>
                <field name="milestone_deadline" optional="hide"/>
            </xpath>
        </field>
    </record>
    
    

</odoo>